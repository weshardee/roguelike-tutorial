{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "./build.sh",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "revealProblems": "onProblem",
        "clear": true
      },
      "problemMatcher": {
        "owner": "odin",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*)\\((\\d+):(\\d+)\\) (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    }
  ]
}