{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "command": "./build.sh",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "revealProblems": "never",
        "clear": true
      },
      "problemMatcher": "$gcc",    
    },
    {
      "label": "watch",
      "group": {
        "kind": "build",
        "isDefault": false,
      },
      "command": "./scripts/watch.sh",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "revealProblems": "always",
        "clear": true
      },
      "problemMatcher": {
        "base": "$gcc",
        "background": {
          "beginsPattern": {
            "regexp": "change"
          },
          "endsPattern": {
            "regexp": "done",
          },
        },
        "owner": "zig",
        "fileLocation": ["relative", "${workspaceFolder}"],
      }
    },
    {
      "label": "build game library",
      "group": {
        "kind": "build",
        "isDefault": false,
      },
      "command": "./scripts/build_game.sh",
      // "isBackground": true,
      // "runOptions": {
      //   "runOn"
      // },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "revealProblems": "never",
        "clear": true
      },
      "problemMatcher": {
        "background": {
          // "activeOnStart": true,
          "beginsPattern": {
            // "file": 0
            "regexp": "^-- start"
          },
          "endsPattern": {
            // "file": 0
            "regexp": "^-- done"
          },
        },
        "owner": "odin",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*)\\((\\d+):(\\d+)\\) (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    },
  ]
}